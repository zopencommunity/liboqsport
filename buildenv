###
### Build control file for the liboqs port
###

###
### Required Environment Variables
###
export ZOPEN_BUILD_LINE="DEV"
export ZOPEN_STABLE_URL="https://github.com/open-quantum-safe/liboqs/archive/refs/tags/0.15.0-rc1.tar.gz"
export ZOPEN_STABLE_DEPS="cmake curl openssl"
export ZOPEN_DEV_URL="https://github.com/open-quantum-safe/liboqs.git"
export ZOPEN_DEV_DEPS="cmake curl git openssl make automake autoconf libtool m4 sed grep diffutils coreutils"
export ZOPEN_CATEGORIES="library"
export ZOPEN_RUNTIME_DEPS=""
export ZOPEN_CLEAN="skip"
export ZOPEN_NO_BIN=1
# export ZOPEN_SYSTEM_PREREQ="zos25" # optional system pre-req (default=zos25)


###
### Build settings (Port type: BUILD, Build system: CMake)
###
### Settings for CMake build system
export ZOPEN_CONFIGURE="cmake"
export ZOPEN_CONFIGURE_OPTS="-B ../build -DCMAKE_INSTALL_PREFIX=\${ZOPEN_INSTALL_DIR} -DOPENSSL_ROOT_DIR=\$OPENSSL_HOME"
export ZOPEN_MAKE="make"
export ZOPEN_MAKE_OPTS="-C ../build"
export ZOPEN_INSTALL="make"
export ZOPEN_INSTALL_OPTS="install -C ../build"
# ZOPEN_CHECK is often 'ctest' or a custom function.
#export ZOPEN_CHECK="ctest"
#export ZOPEN_CHECK_OPTS="--test-dir ../build --output-on-failure"


